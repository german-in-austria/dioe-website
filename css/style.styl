colors = {
  yellow : #fbc820,
  orange : #f68939,
  purple : #f15f7d,
  pink : #d64f9d,
  blue : #3757a7,
  turquoise : #5dc3e9,
  green : #66be5e
}

body
  font-family 'Lato', sans-serif
  background white
  font-size 120%
  line-height 150%
  font-weight 300

.container.narrow
  max-width 970px !important

.nav-pills
  text-align center
  > li
    display inline-block
    float none
  img
    width 18px
    vertical-align middle
    margin-top -3px

.navbar
  z-index 1000
  position fixed
  left 0
  right 0
  background transparent
  border 0
  /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#ffffff+0,ffffff+100&1+0,0+100;White+to+Transparent */
  background: -moz-linear-gradient(top, rgba(255,255,255,1) 45%, rgba(255,255,255,0) 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(top, rgba(255,255,255,1) 45%,rgba(255,255,255,0) 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to bottom, rgba(255,255,255,1) 45%,rgba(255,255,255,0) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  // filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#00ffffff',GradientType=0 ); /* IE6-9 */

.navbar .navbar-brand
  height 120px
  float none
  padding 0

.navbar .search-field
  height 50px
  margin 15px 0 0 10px

.navbar .navbar-nav a
  line-height 50px
  font-weight 400

.navbar .navbar-nav
    li.active
    li.active a, li.active a:hover
      background transparent
.navbar-spacer
  height 100px

nav input.search-field
  background-image url(../img/magnifying-glass.svg)
  background-position 90% center
  background-repeat no-repeat
  background-size 20px
  width 30px
  border-color transparent
  transition .5s
  box-shadow none
  &::-webkit-input-placeholder /* WebKit, Blink, Edge */
    color transparent
  &:-moz-placeholder /* Mozilla Firefox 4 to 18 */
     color transparent
  &::-moz-placeholder /* Mozilla Firefox 19+ */
     color transparent
  &:-ms-input-placeholder /* Internet Explorer 10-11 */
     color transparent
  cursor pointer
  color transparent
  &:focus
    cursor auto
    width 250px
    border-color #66afe9
    color #333
    &::-webkit-input-placeholder /* WebKit, Blink, Edge */
      color #333
    &:-moz-placeholder /* Mozilla Firefox 4 to 18 */
       color #333
    &::-moz-placeholder /* Mozilla Firefox 19+ */
       color #333
    &:-ms-input-placeholder /* Internet Explorer 10-11 */
       color #333
