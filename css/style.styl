h1, h2, h3
  font-weight 300
  position relative

header.main
  width 100%
  height 500px
  background url(../img/header-main.png)
  background-size cover
  background-position top center
  background-repeat no-repeat

footer
  display block
  height 400px
  width 100%
  background url(../img/footer.png)
  background-size cover
  background-position bottom center
  background-repeat no-repeat
  text-align center

.footer-logos img
  max-height 80px
  max-width 210px
  line-height 130px
  margin 230px 30px 30px 0

article.sub-page
  font-size 120%
  line-height 160%
  h2
    padding-bottom 1em

section.citation
  color #999
  font-size 80%
  h6
    font-size 1em
    font-weight 300
    text-transform uppercase
  table
    margin 0 auto
  table td:first-child
    padding-right 2em

article.intro-text
  font-size 120%
  line-height 150%
  text-align center
  // text-align justify
  text-align-last center
  h1 span
    display block
    font-size .6em
    margin-top .5em

article.preview
  padding 2em 1em
  h3
    line-height 140%
    margin-top 0
  h3:before
    content " "
    position absolute
    left -1.2em
    display block
    height 100%
    width .5em
    background colors["green"]
  h5
    letter-spacing .1em
    font-size .8em
    font-weight 600
    color colors["green"]
